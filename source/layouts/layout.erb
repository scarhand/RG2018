<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Learn how web apps work at Ruby on Rails Workshop for Girls">
    <meta name="author" content="Rails Girls">
    <meta property="og:title" content="Rails Girls" />
    <meta property="og:site_name" content="railsgirls.com" />
    <meta property="og:image" content="http://railsgirls.com/images/railsgirls-sq.png" />
    <meta property="og:description" content="Rails Girls aim is to give tools and a community for women to understand technology and to build their ideas." />
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Rails Girls" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <%= favicon_tag 'images/favicon.png' %>
  </head>
  <body class="<%= current_page.data.page %>">
    <%= partial "header" %>
    <div class="full-width">
      <%= yield %>
    </div>
    <%= partial "footer" %>

    <% if config[:google_analytics] %>
    <script type="text/javascript">
    </script>
    <% end %>
  </body>
</html>
